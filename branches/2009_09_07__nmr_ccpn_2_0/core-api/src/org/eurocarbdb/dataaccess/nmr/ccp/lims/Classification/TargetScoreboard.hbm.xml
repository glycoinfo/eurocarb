<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.lims.Classification">
  <joined-subclass
    name="TargetScoreboard"
    extends="ccp.api.lims.Classification.AbstractCategory"
    table="CLAS_TARGETSCOREBOARD"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">General classification of target status to display.</meta>
  <key column="ABSTRACTCATEGORYID" foreign-key="CLAS_TARGSCOR_ABSTCATE_FK"/>
  
  <many-to-one
    name="hbClassification"
    column="CLASSIFICATIONID"
    class="ccp.api.lims.Classification.Classification" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="CLAS_TARGSCOR_CLAS_FK" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <set 
    name="hbTargetStatus" 
    table="CLAS_TARGSTAT2TARGSCOR"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbTargetStatus</meta>
    <cache usage="read-write"/>
    <key column="TARGETSCOREBOARDID" foreign-key="CLAS_TARGSTAT_TARGSCOR_FK"/>
    <many-to-many column="TARGETSTATUSID" class="ccp.api.lims.Classification.TargetStatus" foreign-key="CLAS_TARGSCOR_TARGSTAT_FK"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
