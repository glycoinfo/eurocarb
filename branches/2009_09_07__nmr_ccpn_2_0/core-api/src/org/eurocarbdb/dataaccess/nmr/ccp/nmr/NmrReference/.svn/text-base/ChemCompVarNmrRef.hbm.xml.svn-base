<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.NmrReference">
  <class
    name="ChemCompVarNmrRef"
    table="NMRR_CHEMCOMPVARNMRREF"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">ChemCompVar to which chemAtomNmrRef children belong.  Note: atoms belonging to Vars with an 'any' attribute must belong to all the relevant Vars</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.nmr.NmrReference.NmrReferenceStore"
    not-null="true"
    unique="false"
    foreign-key="NMRR_CHEMCOMPVARNMRREF_NMRREFESTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_descriptor"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">descriptor for corresponding ChemCompVar  - default is 'any'</meta>
    <meta attribute="default-value">"any"</meta>
    <column name="DESCRIPTOR" sql-type="VARCHAR(80)" length="80" not-null="true" unique-key="chemCompVarNmrRefUniqueKey" />
  </property>
  
  <property
    name="_linking"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">linking for corresponding ChemCompVar  - default is 'any'</meta>
    <meta attribute="default-value">"any"</meta>
    <column name="LINKING" sql-type="VARCHAR(32)" length="32" not-null="true" unique-key="chemCompVarNmrRefUniqueKey" />
  </property>
  
  <list
    name="hbApplicationData"
    table="NMRR_CHEMCOMPVARNMRREF2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbChemCompNmrRef"
    column="CHEMCOMPNMRREFID"
    class="ccp.api.nmr.NmrReference.ChemCompNmrRef" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMRR_CHEMCOMPVARNMRREF_CHEMCOMPNMRREF_FK" 
    unique-key="chemCompVarNmrRefUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <set 
    name="hbChemAtomNmrRefs" 
    table="NMRR_CHEMCOMPVARNMRREF2CHEMATOMNMRREFS"
      schema="nmr" 
    inverse="false" 
    cascade="none"
  >
    <meta attribute="field-description">ChemAtomNmrRefs relevant for this ChemCompVarNmrRef</meta>
    <meta attribute="base-name">hbChemAtomNmrRef</meta>
    <cache usage="read-write"/>
    <key column="CHEMCOMPVARNMRREFID" foreign-key="NMRR_CHEMATOMNMRREF_CHEMCOMPVARNMRREFS_FK"/>
    <many-to-many column="CHEMATOMNMRREFID" class="ccp.api.nmr.NmrReference.ChemAtomNmrRef" foreign-key="NMRR_CHEMCOMPVARNMRREF_CHEMATOMNMRREFS_FK"/>
  </set>

  </class>

</hibernate-mapping>
