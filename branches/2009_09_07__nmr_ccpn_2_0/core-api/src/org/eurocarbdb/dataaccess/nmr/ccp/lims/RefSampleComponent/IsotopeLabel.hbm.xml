<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.lims.RefSampleComponent">
  <class
    name="IsotopeLabel"
    table="REFS_ISOTOPELABEL"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Isotope label or labeling pattern. Refers to elements of a type given by elementSymbol. If self.molResidues is set the substitution is limited to these residues. If self.atomNames is set the substitution is limited to atoms with these names.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.lims.RefSampleComponent.RefSampleComponentStore"
    not-null="true"
    unique="false"
    foreign-key="REFS_ISOTLABE_REFSAMPCOMPSTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_elementSymbol"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">Element symbol for chemical element that is isotope substituted. </meta>
    <meta attribute="default-value">null</meta>
    <column name="ELEMENTSYMBOL" sql-type="VARCHAR(32)" length="32" not-null="true"/>
  </property>
  
  <property
    name="_incorporation"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Fraction of element that is consists of isotope. Unless given specifically in another IsotopeLabel, the rest of the element is assumed to consist of the isotopes in their natural abundance.</meta>
    <meta attribute="default-value">null</meta>
    <column name="INCORPORATION" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_massNumber"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Mass number of incorporated isotope .</meta>
    <meta attribute="default-value">null</meta>
    <column name="MASSNUMBER" sql-type="INTEGER" not-null="true"/>
  </property>
  
  <property
    name="_serial"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Serial number of object. Serves as object main key. Serial numbers of deleted objects are not re-used. Serial numbers can only be set by the implementation. Values are in practice always positive, since negative values are interpreted as a signal to set the next free serial</meta>
    <meta attribute="default-value">null</meta>
    <column name="SERIAL" sql-type="INTEGER" not-null="true" unique-key="isotopeLabelUniqueKey" />
  </property>
  
  <list
    name="hbAtomNames"
    table="REFS_ISOTLABE_ATOMNAMES"
      schema="nmr" 
    cascade="all"
  >
    <meta attribute="field-description">Names of atoms that have been isotope substituted. Applies to the residues given by self.molResidues, or, if self.molResidues is empty, to the entire molecule.</meta>
    <cache usage="read-write" />
    <key column="ISOTOPELABELID" foreign-key="REFS_ISOTLABE_ATOMNAMES_FK"/>
    <index>
      <column name="order_" sql-type="int8" not-null="true"/>
    </index>
    <element type="java.lang.String" not-null="true">
      <column name="ATOMNAME" sql-type="VARCHAR(32)" not-null="true"/>
    </element>
  </list>
  
  <list
    name="hbApplicationData"
    table="REFS_ISOTLABE2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbSpecificLabelGroup"
    column="SPECIFICLABELGROUPID"
    class="ccp.api.lims.RefSampleComponent.SpecificLabelGroup" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="REFS_ISOTLABE_SPECLABEGROU_FK" 
    unique-key="isotopeLabelUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <set 
    name="hbMolResidues" 
    table="MOLE_MOLRESIDUE2ISOTLABE"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">MolResidues to which isotope labeling applies. If not set, the isotope labeling applies to all residues in Molecule.</meta>
    <meta attribute="base-name">hbMolResidue</meta>
    <cache usage="read-write"/>
    <key column="ISOTOPELABELID" foreign-key="MOLE_MOLRESIDUE_ISOTLABE_FK"/>
    <many-to-many column="MOLRESIDUEID" class="ccp.api.molecule.Molecule.MolResidue" foreign-key="REFS_ISOTLABE_MOLRESI_FK"/>
  </set>

  </class>

</hibernate-mapping>
