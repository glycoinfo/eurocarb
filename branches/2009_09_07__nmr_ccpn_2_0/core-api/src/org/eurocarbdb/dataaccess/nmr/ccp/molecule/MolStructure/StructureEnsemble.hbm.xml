<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.MolStructure">
  <class
    name="StructureEnsemble"
    table="COOR_STRUCTUREENSEMBLE"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Ensemble of three-dimensional structures (atomic coordinates) for the MolSystem or part of it.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="TOPOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <property
    name="_segment"
    access="field"
    type="java.lang.String" length="20"
    not-null="false"
  >
    <meta attribute="field-description"></meta>
    <column name="SEGMENT" sql-type="VARCHAR(20)" length="20" not-null="false"  unique-key="structureEnsembleUniqueKey" />
  </property>
  
  <property
    name="_guid"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">global unique identifier - set by implementation.</meta>
    <meta attribute="default-value">null</meta>
    <column name="GUID" sql-type="VARCHAR(80)" length="80" not-null="true"/>
  </property>
  
  <property
    name="_atomNamingSystem"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">Atom naming system used in stored coordinates. If not set, coordinates are stored using CCPN/IUPAC names	</meta>
    <meta attribute="default-value">null</meta>
    <column name="ATOMNAMINGSYSTEM" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_details"
    access="field"
    type="java.lang.String" length="254"
    not-null="false"
  >
    <meta attribute="field-description">Free text, for notes, explanatory comments, etc.</meta>
    <meta attribute="default-value">null</meta>
    <column name="DETAILS" sql-type="VARCHAR(254)" length="254" not-null="false"/>
  </property>
  
  <property
    name="_ensembleId"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Ensemble ID number. Part of key.</meta>
    <meta attribute="default-value">null</meta>
    <column name="ENSEMBLEID" sql-type="INTEGER" not-null="true" unique-key="structureEnsembleUniqueKey" />
  </property>
  
  <property
    name="_resNamingSystem"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">Naming system for residues in stored coordinates. If not set, CCPN/IUPAC names are used.</meta>
    <meta attribute="default-value">null</meta>
    <column name="RESNAMINGSYSTEM" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="COOR_STRUENSE2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbMolSystem"
    column="MOLSYSTEMID"
    class="ccp.api.molecule.MolSystem.MolSystem" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="COOR_STRUENSE_MOLSYSTEM_FK" 
    unique-key="structureEnsembleUniqueKey" 
  >
    <meta attribute="field-description">Molecular System that structure corresponds to</meta>
  </many-to-one>
  
  <many-to-one
    name="hbStructureGeneration"
    column="STRUCTUREGENERATIONID"
    class="ccp.api.nmr.Nmr.StructureGeneration" 
    not-null="false"
    unique="true"
    foreign-key="COOR_STRUENSE_STRUGENE_FK" 
  >
    <meta attribute="field-description">StructureGeneration used to generate StructureEnsemble</meta>
  </many-to-one>
  
  <set 
    name="hbCoordChains" 
    table="COOR_CHAIN"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbCoordChain</meta>
    <cache usage="read-write"/>
    <key column="STRUCTUREENSEMBLEID"/>
    <one-to-many class="ccp.api.molecule.MolStructure.Chain"/>
  </set>
  
  <set 
    name="hbModels" 
    table="COOR_MODEL"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbModel</meta>
    <cache usage="read-write"/>
    <key column="STRUCTUREENSEMBLEID"/>
    <one-to-many class="ccp.api.molecule.MolStructure.Model"/>
  </set>
  
  <set 
    name="hbValidationStores" 
    table="VALD_VALIDATIONSTORE"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">ValidationStores that validate StructureEnsemble</meta>
    <meta attribute="base-name">hbValidationStore</meta>
    <cache usage="read-write"/>
    <key column="STRUCTUREENSEMBLEID"/>
    <one-to-many class="ccp.api.molecule.Validation.ValidationStore"/>
  </set>
  
  <set 
    name="hbStructureAnalyses" 
    table="NMR_STRUANAL2STRUENSE"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Structure analyses carried out using StructureEnsemble</meta>
    <meta attribute="base-name">hbStructureAnalysis</meta>
    <cache usage="read-write"/>
    <key column="STRUCTUREENSEMBLEID" foreign-key="NMR_STRUANAL_STRUENSE_FK"/>
    <many-to-many column="STRUCTUREANALYSISID" class="ccp.api.nmr.Nmr.StructureAnalysis" foreign-key="COOR_STRUENSE_STRUANAL_FK"/>
  </set>

  </class>

</hibernate-mapping>
