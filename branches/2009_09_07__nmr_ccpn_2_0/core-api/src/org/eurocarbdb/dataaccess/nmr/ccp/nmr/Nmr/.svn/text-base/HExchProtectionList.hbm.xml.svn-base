<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.Nmr">
  <joined-subclass
    name="HExchProtectionList"
    extends="ccp.api.nmr.Nmr.AbstractMeasurementList"
    table="NMR_HEXCHPROTECTIONLIST"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">List of hydrogen exchange protection factor measurements.</meta>
  <key column="ABSTRACTMEASUREMENTLISTID" foreign-key="NMR_HEXCHPROTLIST_ABSTMEASLIST_FK"/>
  
  <property
    name="_protectionType"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">Type, i.e. phenomenon giving rise to hydrogen excnage protection.</meta>
    <meta attribute="default-value">null</meta>
    <column name="PROTECTIONTYPE" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <many-to-one
    name="hbReferenceRateList"
    column="REFERENCERATELISTID"
    class="ccp.api.nmr.Nmr.HExchRateList" 
    cascade="merge,save-update"
    not-null="false"
    unique="false"
    foreign-key="NMR_HEXCHPROTLIST_REFERATELIST_FK" 
  >
    <meta attribute="field-description">List of hydrogen exchange rates serving as references for the protection factors reported.</meta>
  </many-to-one>
  
  <set 
    name="hbExperiments" 
    table="NMR_EXPERIMENT"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Experiments for which hydrogen exchange protection factor list is valid</meta>
    <meta attribute="base-name">hbExperiment</meta>
    <cache usage="read-write"/>
    <key column="HEXCHPROTECTIONLISTID"/>
    <one-to-many class="ccp.api.nmr.Nmr.Experiment"/>
  </set>
  
  <set 
    name="hbMeasurements" 
    table="NMR_HEXCHPROTECTION"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbMeasurement</meta>
    <cache usage="read-write"/>
    <key column="PARENTLISTID"/>
    <one-to-many class="ccp.api.nmr.Nmr.HExchProtection"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
