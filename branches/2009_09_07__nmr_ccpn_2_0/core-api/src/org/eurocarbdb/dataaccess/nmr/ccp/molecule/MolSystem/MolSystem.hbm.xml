<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.MolSystem">
  <class
    name="MolSystem"
    table="MOLS_MOLSYSTEM"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Molecular System - a set of potentially interacting chains. Describes all components of known molecular structure considered relevant for (typically) a structure determination. May include components of a complex, components in different states (e.g. free protein, free ligand, and protein and ligand bound in a complex), and also molecules that are not part of any interaction but are considered relevant (e.g. NMR-observable impurities in an Nmr study). </meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="TOPOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <property
    name="_segment"
    access="field"
    type="java.lang.String" length="20"
    not-null="false"
  >
    <meta attribute="field-description"></meta>
    <column name="SEGMENT" sql-type="VARCHAR(20)" length="20" not-null="false"  unique-key="molSystemUniqueKey" />
  </property>
  
  <property
    name="_guid"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">global unique identifier - set by implementation.</meta>
    <meta attribute="default-value">null</meta>
    <column name="GUID" sql-type="VARCHAR(80)" length="80" not-null="true"/>
  </property>
  
  <property
    name="_code"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">MolSystem key, used in links from other packages. Should be a short, name, recognisable to others.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CODE" sql-type="VARCHAR(32)" length="32" not-null="true" unique-key="molSystemUniqueKey" />
  </property>
  
  <property
    name="_details"
    access="field"
    type="java.lang.String" length="254"
    not-null="false"
  >
    <meta attribute="field-description">Free text, for notes, explanatory comments, etc.</meta>
    <meta attribute="default-value">null</meta>
    <column name="DETAILS" sql-type="VARCHAR(254)" length="254" not-null="false"/>
  </property>
  
  <property
    name="_hasChemExchange"
    access="field"
    type="java.lang.Boolean"
    not-null="false"
  >
    <meta attribute="field-description">Does MolSystem contain chains in chemical exchange?</meta>
    <meta attribute="default-value">null</meta>
    <column name="HASCHEMEXCHANGE" sql-type="BOOLEAN" not-null="false"/>
  </property>
  
  <property
    name="_name"
    access="field"
    type="java.lang.String" length="254"
    not-null="false"
  >
    <meta attribute="field-description">Molecule name used for display purposes. User changeable.</meta>
    <meta attribute="default-value">null</meta>
    <column name="NAME" sql-type="VARCHAR(254)" length="254" not-null="false"/>
  </property>
  
  <list
    name="hbCommonNames"
    table="MOLS_MOLSYSTEM_COMMNAME"
      schema="nmr" 
    cascade="all"
  >
    <meta attribute="field-description">Common (non-systematic) names for MolSystem</meta>
    <cache usage="read-write" />
    <key column="MOLSYSTEMID" foreign-key="MOLS_MOLSYSTEM_COMMNAME_FK"/>
    <index>
      <column name="order_" sql-type="int8" not-null="true"/>
    </index>
    <element type="java.lang.String" not-null="true">
      <column name="COMMONNAME" sql-type="VARCHAR(254)" not-null="true"/>
    </element>
  </list>
  
  <list
    name="hbFunctions"
    table="MOLS_MOLSYSTEM_FUNCTIONS"
      schema="nmr" 
    cascade="all"
  >
    <meta attribute="field-description">Keywords describing the function of the MolSystem</meta>
    <cache usage="read-write" />
    <key column="MOLSYSTEMID" foreign-key="MOLS_MOLSYSTEM_FUNCTIONS_FK"/>
    <index>
      <column name="order_" sql-type="int8" not-null="true"/>
    </index>
    <element type="java.lang.String" not-null="true">
      <column name="FUNCTION" sql-type="VARCHAR(80)" not-null="true"/>
    </element>
  </list>
  
  <list
    name="hbKeywords"
    table="MOLS_MOLSYSTEM_KEYWORDS"
      schema="nmr" 
    cascade="all"
  >
    <meta attribute="field-description">Keywords for searching MolSystem.</meta>
    <cache usage="read-write" />
    <key column="MOLSYSTEMID" foreign-key="MOLS_MOLSYSTEM_KEYWORDS_FK"/>
    <index>
      <column name="order_" sql-type="int8" not-null="true"/>
    </index>
    <element type="java.lang.String" not-null="true">
      <column name="KEYWORD" sql-type="VARCHAR(80)" not-null="true"/>
    </element>
  </list>
  
  <list
    name="hbApplicationData"
    table="MOLS_MOLSYSTEM2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <set 
    name="hbChainInteractions" 
    table="MOLS_CHAININTERACTION"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbChainInteraction</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.MolSystem.ChainInteraction"/>
  </set>
  
  <set 
    name="hbChains" 
    table="MOLS_CHAIN"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbChain</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.MolSystem.Chain"/>
  </set>
  
  <set 
    name="hbMolSystemLinks" 
    table="MOLS_MOLSYSTEMLINK"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbMolSystemLink</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.MolSystem.MolSystemLink"/>
  </set>
  
  <set 
    name="hbMolSystemSysNames" 
    table="MOLS_MOLSYSTEMSYSNAME"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbMolSystemSysName</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.MolSystem.MolSystemSysName"/>
  </set>
  
  <set 
    name="hbNonCovalentBonds" 
    table="MOLS_NONCOVALENTBOND"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbNonCovalentBond</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.MolSystem.NonCovalentBond"/>
  </set>
  
  <set 
    name="hbStructureGroups" 
    table="MOLS_STRUCTUREGROUP"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbStructureGroup</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.MolSystem.StructureGroup"/>
  </set>
  
  <set 
    name="hbEntries" 
    table="ENTR_ENTRY"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Bmrb Entries for MolSystem</meta>
    <meta attribute="base-name">hbEntry</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID"/>
    <one-to-many class="ccp.api.nmr.NmrEntry.Entry"/>
  </set>
  
  <set 
    name="hbStructureEnsembles" 
    table="COOR_STRUCTUREENSEMBLE"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Molecular structures corresponding to MolSystem</meta>
    <meta attribute="base-name">hbStructureEnsemble</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.MolStructure.StructureEnsemble"/>
  </set>
  
  <set 
    name="hbCitations" 
    table="MOLS_MOLSYSTEM2CITATIONS"
      schema="nmr" 
    inverse="false" 
    cascade="none"
  >
    <meta attribute="field-description">Citations describing MolSystem</meta>
    <meta attribute="base-name">hbCitation</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID" foreign-key="CITA_CITATION_MOLSYSTEMS_FK"/>
    <many-to-many column="CITATIONID" class="ccp.api.general.Citation.Citation" foreign-key="MOLS_MOLSYSTEM_CITATIONS_FK"/>
  </set>
  
  <set 
    name="hbDbReferences" 
    table="MOLS_MOLSYSTEM2DBREFE"
      schema="nmr" 
    inverse="false" 
    cascade="none"
  >
    <meta attribute="field-description">Database references describing MolSystem</meta>
    <meta attribute="base-name">hbDbReference</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID" foreign-key="DBR_ENTRY_MOLSYSTEMS_FK"/>
    <many-to-many column="DBREFERENCEID" class="ccp.api.general.DbRef.Entry" foreign-key="MOLS_MOLSYSTEM_DBREFE_FK"/>
  </set>
  
  <set 
    name="hbMolSystemValidations" 
    table="VALD_MOLSYSTVALI2MOLSYSTEMS"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Validation results for MolSystem</meta>
    <meta attribute="base-name">hbMolSystemValidation</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID" foreign-key="VALD_MOLSYSTVALI_MOLSYSTEMS_FK"/>
    <many-to-many column="MOLSYSTEMVALIDATIONID" class="ccp.api.molecule.Validation.MolSystemValidation" foreign-key="MOLS_MOLSYSTEM_MOLSYSTVALI_FK"/>
  </set>
  
  <set 
    name="hbNmrExperiments" 
    table="NMR_EXPERIMENT2MOLSYSTEMS"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Nmr Experiments carried out on MolSystem</meta>
    <meta attribute="base-name">hbNmrExperiment</meta>
    <cache usage="read-write"/>
    <key column="MOLSYSTEMID" foreign-key="NMR_EXPERIMENT_MOLSYSTEMS_FK"/>
    <many-to-many column="NMREXPERIMENTID" class="ccp.api.nmr.Nmr.Experiment" foreign-key="MOLS_MOLSYSTEM_NMREXPE_FK"/>
  </set>

  </class>

</hibernate-mapping>
