<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.general.DataLocation">
  <class
    name="Component"
    table="DLOC_COMPONENT"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Component of the decomposition</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.general.DataLocation.DataLocationStore"
    not-null="true"
    unique="false"
    foreign-key="DLOC_COMPONENT_DATALOCASTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_amplitude"
    access="field"
    type="java.lang.Float"
    not-null="true"
  >
    <meta attribute="field-description">Amplitude of the component. </meta>
    <meta attribute="default-value">new java.lang.Float(1.0)</meta>
    <column name="AMPLITUDE" sql-type="FLOAT" not-null="true"/>
  </property>
  
  <property
    name="_annotation"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">Component annotation. Used to further characterise the nature of the component, e.g. to distinguish between backbone NH and side chain NH2 components for NH based protein experiments. </meta>
    <meta attribute="default-value">null</meta>
    <column name="ANNOTATION" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_regionId"
    access="field"
    type="java.lang.Integer"
    not-null="false"
  >
    <meta attribute="field-description">Region ID for Component. Components that share the same regionId are generally calculated together and refer to teh same region of teh spectrum. They can be summed to give a correct representation of the spectrum for the region in question. </meta>
    <meta attribute="default-value">null</meta>
    <column name="REGIONID" sql-type="INTEGER" not-null="false"/>
  </property>
  
  <property
    name="_serial"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Serial number of object. Serves as object main key. Serial numbers of deleted objects are not re-used. Serial numbers can only be set by the implementation. Values are in practice always positive, since negative values are interpreted as a signal to set the next free serial</meta>
    <meta attribute="default-value">null</meta>
    <column name="SERIAL" sql-type="INTEGER" not-null="true" unique-key="componentUniqueKey" />
  </property>
  
  <property
    name="_status"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">Status of teh component: </meta>
    <meta attribute="default-value">"raw"</meta>
    <column name="STATUS" sql-type="VARCHAR(32)" length="32" not-null="true"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="DLOC_COMPONENT2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbShapeMatrix"
    column="SHAPEMATRIXID"
    class="ccp.api.general.DataLocation.ShapeMatrix" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="DLOC_COMPONENT_SHAPMATR_FK" 
    unique-key="componentUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>

  </class>

</hibernate-mapping>
