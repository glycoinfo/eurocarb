<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.Validation">
  <joined-subclass
    name="AtomValidation"
    extends="ccp.api.molecule.Validation.ValidationResult"
    table="VALD_ATOMVALIDATION"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Validation result for one or more Atoms</meta>
  <key column="VALIDATIONRESULTID" foreign-key="VALD_ATOMVALI_VALIRESU_FK"/>
  
  <set 
    name="hbAtoms" 
    table="VALD_ATOMVALI2ATOMS"
      schema="nmr" 
    inverse="false" 
    cascade="none"
  >
    <meta attribute="field-description">Atoms being validated</meta>
    <meta attribute="base-name">hbAtom</meta>
    <cache usage="read-write"/>
    <key column="ATOMVALIDATIONID" foreign-key="COOR_ATOM_ATOMVALI_FK"/>
    <many-to-many column="ATOMID" class="ccp.api.molecule.MolStructure.Atom" foreign-key="VALD_ATOMVALI_ATOMS_FK"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
