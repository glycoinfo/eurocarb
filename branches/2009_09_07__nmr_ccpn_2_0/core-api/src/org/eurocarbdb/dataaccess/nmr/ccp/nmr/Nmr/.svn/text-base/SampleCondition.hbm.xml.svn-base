<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.Nmr">
  <class
    name="SampleCondition"
    table="NMR_SAMPLECONDITION"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Individual sample condition that applies to a sample during a specific experiment. Because of the many possible conditions, type and unit can be set freely.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.nmr.Nmr.NmrProject"
    not-null="true"
    unique="false"
    foreign-key="NMR_SAMPCOND_NMRPROJECT_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_condition"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">Sample condition Type. Open enumeration.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CONDITION" sql-type="VARCHAR(80)" length="80" not-null="true" unique-key="sampleConditionUniqueKey" />
  </property>
  
  <property
    name="_error"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Estimated standard deviation (error) on sample condition value.</meta>
    <meta attribute="default-value">null</meta>
    <column name="ERROR" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_unit"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">Measuring unit for sample condition</meta>
    <meta attribute="default-value">null</meta>
    <column name="UNIT" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_value"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">value of sample condition. Note that only floating point numbers are allowed.</meta>
    <meta attribute="default-value">null</meta>
    <column name="VALUE" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="NMR_SAMPCOND2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbSampleConditionSet"
    column="SAMPLECONDITIONSETID"
    class="ccp.api.nmr.Nmr.SampleConditionSet" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMR_SAMPCOND_SAMPCONDSET_FK" 
    unique-key="sampleConditionUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>

  </class>

</hibernate-mapping>
