<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.lims.Classification">
  <joined-subclass
    name="SampleComponentCategory"
    extends="ccp.api.lims.Classification.AbstractCategory"
    table="CLAS_SAMPLECOMPONENTCATEGORY"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">The category of the Samplecomponent classified by namingSystem. Different organisations can have their own categories. PIMS default caregories include buffering agent, salt, inhibitor,...</meta>
  <key column="ABSTRACTCATEGORYID" foreign-key="CLAS_SAMPCOMPCATE_ABSTCATE_FK"/>
  
  <many-to-one
    name="hbClassification"
    column="CLASSIFICATIONID"
    class="ccp.api.lims.Classification.Classification" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="CLAS_SAMPCOMPCATE_CLAS_FK" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <set 
    name="hbComponents" 
    table="REFS_ABSTCOMP2CATEGORIES"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Component list associated to a category.</meta>
    <meta attribute="base-name">hbComponent</meta>
    <cache usage="read-write"/>
    <key column="CATEGORYID" foreign-key="REFS_ABSTCOMP_CATEGORIES_FK"/>
    <many-to-many column="COMPONENTID" class="ccp.api.lims.RefSampleComponent.AbstractComponent" foreign-key="CLAS_SAMPCOMPCATE_COMPONENTS_FK"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
