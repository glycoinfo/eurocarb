<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.NmrConstraint">
  <class
    name="FixedResonance"
    table="NMRC_FIXEDRESONANCE"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Permanent, unchanging copy of Nmr.Resonance.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.nmr.NmrConstraint.NmrConstraintStore"
    not-null="true"
    unique="false"
    foreign-key="NMRC_FIXERESO_NMRCONSSTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_details"
    access="field"
    type="java.lang.String" length="254"
    not-null="false"
  >
    <meta attribute="field-description">Free text, for notes, explanatory comments, etc.</meta>
    <meta attribute="default-value">null</meta>
    <column name="DETAILS" sql-type="VARCHAR(254)" length="254" not-null="false"/>
  </property>
  
  <property
    name="_isotopeCode"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">Isotope code of corresponding isotope. E.g. 1H, 2H, 3He, 13C, ..</meta>
    <meta attribute="default-value">null</meta>
    <column name="ISOTOPECODE" sql-type="VARCHAR(32)" length="32" not-null="true"/>
  </property>
  
  <property
    name="_name"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">Name of Resonance</meta>
    <meta attribute="default-value">null</meta>
    <column name="NAME" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_resonanceSerial"
    access="field"
    type="java.lang.Integer"
    not-null="false"
  >
    <meta attribute="field-description">Serial of corresponding Nmr.Resonance</meta>
    <meta attribute="default-value">null</meta>
    <column name="RESONANCESERIAL" sql-type="INTEGER" not-null="false"/>
  </property>
  
  <property
    name="_serial"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Serial number of object. Serves as object main key. Serial numbers of deleted objects are not re-used. Serial numbers can only be set by the implementation. Values are in practice always positive, since negative values are interpreted as a signal to set the next free serial</meta>
    <meta attribute="default-value">null</meta>
    <column name="SERIAL" sql-type="INTEGER" not-null="true" unique-key="fixedResonanceUniqueKey" />
  </property>
  
  <list
    name="hbApplicationData"
    table="NMRC_FIXERESO2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbNmrConstraintStore"
    column="NMRCONSTRAINTSTOREID"
    class="ccp.api.nmr.NmrConstraint.NmrConstraintStore" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMRC_FIXERESO_NMRCONSSTOR_FK" 
    unique-key="fixedResonanceUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbResonanceSet"
    column="RESONANCESETID"
    class="ccp.api.nmr.NmrConstraint.FixedResonanceSet" 
    cascade="merge,save-update"
    not-null="false"
    unique="false"
    foreign-key="NMRC_FIXERESO_RESOSET_FK" 
  >
    <meta attribute="field-description">FixedResonanceSet (part of assignment for Constraint Lists) involving Resonance.</meta>
  </many-to-one>
  
  <set 
    name="hbChainStateLinks" 
    table="NMRC_CHAINSTATELINK"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbChainStateLink</meta>
    <cache usage="read-write"/>
    <key column="FIXEDRESONANCEID"/>
    <one-to-many class="ccp.api.nmr.NmrConstraint.ChainStateLink"/>
  </set>
  
  <set 
    name="hbChemShiftConstraints" 
    table="NMRC_CHEMSHIFTCONSTRAINT"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Chemical shift constraints involving FIxedResonance</meta>
    <meta attribute="base-name">hbChemShiftConstraint</meta>
    <cache usage="read-write"/>
    <key column="RESONANCEID"/>
    <one-to-many class="ccp.api.nmr.NmrConstraint.ChemShiftConstraint"/>
  </set>
  
  <set 
    name="hbCsaConstraints" 
    table="NMRC_CSACONSTRAINT"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbCsaConstraint</meta>
    <cache usage="read-write"/>
    <key column="RESONANCEID"/>
    <one-to-many class="ccp.api.nmr.NmrConstraint.CsaConstraint"/>
  </set>
  
  <set 
    name="hbResCoords" 
    table="NMRC_RESCOORD"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Coordinate records (ResCoords) from resonance-only structures relevant for FixedResonance</meta>
    <meta attribute="base-name">hbResCoord</meta>
    <cache usage="read-write"/>
    <key column="RESONANCEID"/>
    <one-to-many class="ccp.api.nmr.NmrConstraint.ResCoord"/>
  </set>
  
  <set 
    name="hbDihedralConstraints" 
    table="NMRC_DIHECONS2RESONANCES"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Dihedral angle constraints involving FixedResonance.</meta>
    <meta attribute="base-name">hbDihedralConstraint</meta>
    <cache usage="read-write"/>
    <key column="RESONANCEID" foreign-key="NMRC_DIHECONS_RESONANCES_FK"/>
    <many-to-many column="DIHEDRALCONSTRAINTID" class="ccp.api.nmr.NmrConstraint.DihedralConstraint" foreign-key="NMRC_FIXERESO_DIHECONS_FK"/>
  </set>
  
  <set 
    name="hbPairwiseConstraintItems" 
    table="NMRC_PAIRCONSITEM2RESONANCES"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">PairWiseConstraintItems that involve FixedResonance</meta>
    <meta attribute="base-name">hbPairwiseConstraintItem</meta>
    <cache usage="read-write"/>
    <key column="RESONANCEID" foreign-key="NMRC_PAIRCONSITEM_RESONANCES_FK"/>
    <many-to-many column="PAIRWISECONSTRAINTITEMID" class="ccp.api.nmr.NmrConstraint.PairwiseConstraintItem" foreign-key="NMRC_FIXERESO_PAIRCONSITEM_FK"/>
  </set>

  </class>

</hibernate-mapping>
