<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.lims.Location">
  <class
    name="Location"
    table="LOCA_LOCATION"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">The information on a laboratory location used for storage.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.lims.Location.LocationStore"
    not-null="true"
    unique="false"
    foreign-key="LOCA_LOCATION_LOCASTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_locationType"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">The type of the location. e.g. 'Building', 'Room', 'Fridge', 'Cupboard', 'Shelves',...</meta>
    <meta attribute="default-value">null</meta>
    <column name="LOCATIONTYPE" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_name"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">The name of the location.</meta>
    <meta attribute="default-value">null</meta>
    <column name="NAME" sql-type="VARCHAR(80)" length="80" not-null="true"/>
  </property>
  
  <property
    name="_pressure"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">The pressure of the location in pascal (Pa).</meta>
    <meta attribute="default-value">null</meta>
    <column name="PRESSURE" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_pressureDisplayUnit"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">This is the unit entered by user and used for display.</meta>
    <meta attribute="default-value">null</meta>
    <column name="PRESSUREDISPLAYUNIT" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_serial"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Unique identifier.</meta>
    <meta attribute="default-value">null</meta>
    <column name="SERIAL" sql-type="INTEGER" not-null="true" unique-key="locationUniqueKey" />
  </property>
  
  <property
    name="_tempDisplayUnit"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">This is the unit entered by user and used for display.</meta>
    <meta attribute="default-value">null</meta>
    <column name="TEMPDISPLAYUNIT" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_temperature"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">The temperature of the location in kelvin (K).</meta>
    <meta attribute="default-value">null</meta>
    <column name="TEMPERATURE" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="LOCA_LOCATION2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbLocation"
    column="LOCATIONID"
    class="ccp.api.lims.Location.Location" 
    not-null="false"
    unique="false"
    foreign-key="LOCA_LOCATION_LOCATION_FK" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbLocationStore"
    column="LOCATIONSTOREID"
    class="ccp.api.lims.Location.LocationStore" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="LOCA_LOCATION_LOCASTOR_FK" 
    unique-key="locationUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbOrganisation"
    column="ORGANISATIONID"
    class="ccp.api.general.Affiliation.Organisation" 
    cascade="merge,save-update"
    not-null="false"
    unique="false"
    foreign-key="LOCA_LOCATION_ORGA_FK" 
  >
    <meta attribute="field-description">The organisation to which the location belongs.</meta>
  </many-to-one>
  
  <set 
    name="hbContents" 
    table="LOCA_LOCATION"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">List of sub location contained in another location. This is the contents of a Location.</meta>
    <meta attribute="base-name">hbContent</meta>
    <cache usage="read-write"/>
    <key column="LOCATIONID"/>
    <one-to-many class="ccp.api.lims.Location.Location"/>
  </set>
  
  <set 
    name="hbHolderLocations" 
    table="HOLD_HOLDERLOCATION"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">List over time of occupancy for a given location.</meta>
    <meta attribute="base-name">hbHolderLocation</meta>
    <cache usage="read-write"/>
    <key column="LOCATIONID"/>
    <one-to-many class="ccp.api.lims.Holder.HolderLocation"/>
  </set>

  </class>

</hibernate-mapping>
