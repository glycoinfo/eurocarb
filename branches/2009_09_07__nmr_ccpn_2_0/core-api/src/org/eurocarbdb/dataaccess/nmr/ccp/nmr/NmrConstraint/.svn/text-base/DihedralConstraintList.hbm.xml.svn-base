<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.NmrConstraint">
  <joined-subclass
    name="DihedralConstraintList"
    extends="ccp.api.nmr.NmrConstraint.AbstractConstraintList"
    table="NMRC_DIHEDRALCONSTRAINTLIST"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">List of Dihedral angle restraints, including those that arise from J couplings.</meta>
  <key column="ABSTRACTCONSTRAINTLISTID" foreign-key="NMRC_DIHECONSLIST_ABSTCONSLIST_FK"/>
  
  <set 
    name="hbConstraints" 
    table="NMRC_DIHEDRALCONSTRAINT"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbConstraint</meta>
    <cache usage="read-write"/>
    <key column="PARENTLISTID"/>
    <one-to-many class="ccp.api.nmr.NmrConstraint.DihedralConstraint"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
