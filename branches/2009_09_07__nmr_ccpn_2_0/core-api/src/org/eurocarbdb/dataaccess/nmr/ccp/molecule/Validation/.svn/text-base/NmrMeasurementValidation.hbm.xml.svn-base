<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.Validation">
  <joined-subclass
    name="NmrMeasurementValidation"
    extends="ccp.api.molecule.Validation.ValidationResult"
    table="VALD_NMRMEASUREMENTVALIDATION"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Validation result for one or more Nmr.Mesurements</meta>
  <key column="VALIDATIONRESULTID" foreign-key="VALD_NMRMEASVALI_VALIRESU_FK"/>
  
  <set 
    name="hbNmrMeasurements" 
    table="NMR_ABSTMEAS2NMRMEASVALI"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">AbstractMeasurements being validated</meta>
    <meta attribute="base-name">hbNmrMeasurement</meta>
    <cache usage="read-write"/>
    <key column="NMRMEASUREMENTVALIDATIONID" foreign-key="NMR_ABSTMEAS_NMRMEASVALI_FK"/>
    <many-to-many column="NMRMEASUREMENTID" class="ccp.api.nmr.Nmr.AbstractMeasurement" foreign-key="VALD_NMRMEASVALI_NMRMEAS_FK"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
