<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.NmrEntry">
  <class
    name="RelatedEntry"
    table="ENTR_RELATEDENTRY"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Database entry related to the current entry.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.nmr.NmrEntry.NmrEntryStore"
    not-null="true"
    unique="false"
    foreign-key="ENTR_RELAENTR_NMRENTRSTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_dbCode"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">Database identifier of related entry</meta>
    <meta attribute="default-value">null</meta>
    <column name="DBCODE" sql-type="VARCHAR(80)" length="80" not-null="true" unique-key="relatedEntryUniqueKey" />
  </property>
  
  <property
    name="_dbName"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">Name of database containing related entry, ('BMRB', 'PDB, ...) </meta>
    <meta attribute="default-value">"BMRB"</meta>
    <column name="DBNAME" sql-type="VARCHAR(80)" length="80" not-null="true" unique-key="relatedEntryUniqueKey" />
  </property>
  
  <property
    name="_details"
    access="field"
    type="java.lang.String" length="254"
    not-null="false"
  >
    <meta attribute="field-description">Free text, for notes, explanatory comments, etc.</meta>
    <meta attribute="default-value">null</meta>
    <column name="DETAILS" sql-type="VARCHAR(254)" length="254" not-null="false"/>
  </property>
  
  <property
    name="_relationship"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">what is the relationship between the current entry and the cited one. NB Should probably be an open enum. E.g. 'supersedes', </meta>
    <meta attribute="default-value">null</meta>
    <column name="RELATIONSHIP" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="ENTR_RELAENTR2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbEntry"
    column="ENTRYID"
    class="ccp.api.nmr.NmrEntry.Entry" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="ENTR_RELAENTR_ENTRY_FK" 
    unique-key="relatedEntryUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>

  </class>

</hibernate-mapping>
