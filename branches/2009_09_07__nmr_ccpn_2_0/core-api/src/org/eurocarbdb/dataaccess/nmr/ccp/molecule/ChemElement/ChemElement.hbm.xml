<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.ChemElement">
  <class
    name="ChemElement"
    table="CHEL_CHEMELEMENT"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">e.g. C</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.molecule.ChemElement.ChemElementStore"
    not-null="true"
    unique="false"
    foreign-key="CHEL_CHEMELEM_CHEMELEMSTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_atomNumber"
    access="field"
    type="java.lang.Integer"
    not-null="false"
  >
    <meta attribute="field-description">Atom number of ChemElement, equal to number of protons.</meta>
    <meta attribute="default-value">null</meta>
    <column name="ATOMNUMBER" sql-type="INTEGER" not-null="false"/>
  </property>
  
  <property
    name="_atomicRadius"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Standard atomic radius (in Angstrom)</meta>
    <meta attribute="default-value">null</meta>
    <column name="ATOMICRADIUS" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_covalentRadius"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Standard covalent radius (in Angstrom).</meta>
    <meta attribute="default-value">null</meta>
    <column name="COVALENTRADIUS" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_mass"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Standard mass (in atomic mass units), equal to average mass of natural isotopic composition.</meta>
    <meta attribute="default-value">null</meta>
    <column name="MASS" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_name"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">name of ChemElement, first letter only in upper case. E.g. Carbon, Hydrogen, Uranium.</meta>
    <meta attribute="default-value">null</meta>
    <column name="NAME" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_symbol"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">Element symbol for element. If one letter upper case, if two letters first upper, second lower case. E.g. 'C', 'H', 'U', 'He', 'Cl', etc.</meta>
    <meta attribute="default-value">null</meta>
    <column name="SYMBOL" sql-type="VARCHAR(32)" length="32" not-null="true" unique-key="chemElementUniqueKey" />
  </property>
  
  <list
    name="hbApplicationData"
    table="CHEL_CHEMELEM2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbChemElementStore"
    column="CHEMELEMENTSTOREID"
    class="ccp.api.molecule.ChemElement.ChemElementStore" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="CHEL_CHEMELEM_CHEMELEMSTOR_FK" 
    unique-key="chemElementUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <set 
    name="hbIsotopes" 
    table="CHEL_ISOTOPE"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbIsotope</meta>
    <cache usage="read-write"/>
    <key column="CHEMELEMENTID"/>
    <one-to-many class="ccp.api.molecule.ChemElement.Isotope"/>
  </set>

  </class>

</hibernate-mapping>
