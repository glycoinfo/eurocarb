<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.lims.Sample">
  <class
    name="SampleComponent"
    table="SAM_SAMPLECOMPONENT"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">The information on the sample component. One component is one element of the contents of the sample.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.lims.Sample.SampleStore"
    not-null="true"
    unique="false"
    foreign-key="SAM_SAMPCOMP_SAMPSTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_concDisplayUnit"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">This is the unit entered by user and used for display.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CONCDISPLAYUNIT" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_concentration"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Concentration of the component in the sample.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CONCENTRATION" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_concentrationError"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">The concentration error.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CONCENTRATIONERROR" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_concentrationUnit"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">The concentration unit that should be one of these units: kg/m3 for mass density, mol/L (M) for amount-of-substance concentration, m3/m3 for volume fraction, mol/mol for amount of substance fraction and kg/kg for mass fraction.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CONCENTRATIONUNIT" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_details"
    access="field"
    type="java.lang.String"
    not-null="false"
  >
    <meta attribute="field-description">Free text, for notes, explanatory comments, etc.</meta>
    <meta attribute="default-value">null</meta>
    <column name="DETAILS" sql-type="TEXT" not-null="false"/>
  </property>
  
  <property
    name="_purity"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">The value of the sample component purity.</meta>
    <meta attribute="default-value">null</meta>
    <column name="PURITY" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_serial"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Serial number of object. Serves as object main key. Serial numbers of deleted objects are not re-used. Serial numbers can only be set by the implementation. Values are in practice always positive, since negative values are interpreted as a signal to set the next free serial</meta>
    <meta attribute="default-value">null</meta>
    <column name="SERIAL" sql-type="INTEGER" not-null="true" unique-key="sampleComponentUniqueKey" />
  </property>
  
  <list
    name="hbApplicationData"
    table="SAM_SAMPCOMP2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbAbstractSample"
    column="ABSTRACTSAMPLEID"
    class="ccp.api.lims.Sample.AbstractSample" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="SAM_SAMPCOMP_ABSTSAMP_FK" 
    unique-key="sampleComponentUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbContainer"
    column="CONTAINERID"
    class="ccp.api.lims.Sample.SampleComponent" 
    not-null="false"
    unique="false"
    foreign-key="SAM_SAMPCOMP_CONTAINER_FK" 
  >
    <meta attribute="field-description">The container component to which the sub components belong.</meta>
  </many-to-one>
  
  <many-to-one
    name="hbRefComponent"
    column="REFCOMPONENTID"
    class="ccp.api.lims.RefSampleComponent.AbstractComponent" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="SAM_SAMPCOMP_REFCOMP_FK" 
  >
    <meta attribute="field-description">The component used as a reference associated to a SampleComponent.</meta>
  </many-to-one>
  
  <set 
    name="hbContents" 
    table="SAM_SAMPLECOMPONENT"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">List of sub component contained in another component. This is the contents of a component.</meta>
    <meta attribute="base-name">hbContent</meta>
    <cache usage="read-write"/>
    <key column="CONTAINERID"/>
    <one-to-many class="ccp.api.lims.Sample.SampleComponent"/>
  </set>

  </class>

</hibernate-mapping>
