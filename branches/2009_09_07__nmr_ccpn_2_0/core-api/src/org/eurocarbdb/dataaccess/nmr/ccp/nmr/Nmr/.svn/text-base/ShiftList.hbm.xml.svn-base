<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.Nmr">
  <joined-subclass
    name="ShiftList"
    extends="ccp.api.nmr.Nmr.AbstractMeasurementList"
    table="NMR_SHIFTLIST"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">List of chemical shifts.</meta>
  <key column="ABSTRACTMEASUREMENTLISTID" foreign-key="NMR_SHIFTLIST_ABSTMEASLIST_FK"/>
  
  <set 
    name="hbExperiments" 
    table="NMR_EXPERIMENT"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Experiments for which shift list is valid</meta>
    <meta attribute="base-name">hbExperiment</meta>
    <cache usage="read-write"/>
    <key column="SHIFTLISTID"/>
    <one-to-many class="ccp.api.nmr.Nmr.Experiment"/>
  </set>
  
  <set 
    name="hbMeasurements" 
    table="NMR_SHIFT"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">Chemical Shift in ShiftList</meta>
    <meta attribute="base-name">hbMeasurement</meta>
    <cache usage="read-write"/>
    <key column="PARENTLISTID"/>
    <one-to-many class="ccp.api.nmr.Nmr.Shift"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
