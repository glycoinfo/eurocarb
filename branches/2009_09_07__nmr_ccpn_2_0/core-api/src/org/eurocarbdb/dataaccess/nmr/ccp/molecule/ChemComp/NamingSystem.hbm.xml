<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.ChemComp">
  <class
    name="NamingSystem"
    table="CHEM_NAMINGSYSTEM"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">ChemComp naming system. Serves as container for ChemComp and Atom/AtomSet systematic names. May be defined relative to a reference, in which case only names that differ from those in the reference are given explicitly</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.molecule.ChemComp.ChemComp"
    not-null="true"
    unique="false"
    foreign-key="CHEM_NAMISYST_CHEMCOMP_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_name"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">naming system within which systematic names are defined</meta>
    <meta attribute="default-value">null</meta>
    <column name="NAME" sql-type="VARCHAR(32)" length="32" not-null="true" unique-key="namingSystemUniqueKey" />
  </property>
  
  <list
    name="hbApplicationData"
    table="CHEM_NAMISYST2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbAtomReference"
    column="ATOMREFERENCEID"
    class="ccp.api.molecule.ChemComp.NamingSystem" 
    not-null="false"
    unique="false"
    foreign-key="CHEM_NAMISYST_ATOMREFE_FK" 
  >
    <meta attribute="field-description">Reference naming system for atom names. Any atom names not found under the namingSystem itself should be sought in the reference NamingSystem</meta>
  </many-to-one>
  
  <many-to-one
    name="hbAtomSetReference"
    column="ATOMSETREFERENCEID"
    class="ccp.api.molecule.ChemComp.NamingSystem" 
    not-null="false"
    unique="false"
    foreign-key="CHEM_NAMISYST_ATOMSETREFE_FK" 
  >
    <meta attribute="field-description">Reference naming system for atom set names. Any atom names not found under the namingSystem itself should be sought in the reference NamingSystem</meta>
  </many-to-one>
  
  <many-to-one
    name="hbChemComp"
    column="CHEMCOMPID"
    class="ccp.api.molecule.ChemComp.ChemComp" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="CHEM_NAMISYST_CHEMCOMP_FK" 
    unique-key="namingSystemUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <set 
    name="hbAtomSetVariantSystems" 
    table="CHEM_NAMINGSYSTEM"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">variant naming systems that use the present one for atom name reference</meta>
    <meta attribute="base-name">hbAtomSetVariantSystem</meta>
    <cache usage="read-write"/>
    <key column="ATOMSETREFERENCEID"/>
    <one-to-many class="ccp.api.molecule.ChemComp.NamingSystem"/>
  </set>
  
  <set 
    name="hbAtomSysNames" 
    table="CHEM_ATOMSYSNAME"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbAtomSysName</meta>
    <cache usage="read-write"/>
    <key column="NAMINGSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.ChemComp.AtomSysName"/>
  </set>
  
  <set 
    name="hbAtomVariantSystems" 
    table="CHEM_NAMINGSYSTEM"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">variant naming systems that use the present one for atom name reference</meta>
    <meta attribute="base-name">hbAtomVariantSystem</meta>
    <cache usage="read-write"/>
    <key column="ATOMREFERENCEID"/>
    <one-to-many class="ccp.api.molecule.ChemComp.NamingSystem"/>
  </set>
  
  <set 
    name="hbChemCompSysNames" 
    table="CHEM_CHEMCOMPSYSNAME"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbChemCompSysName</meta>
    <cache usage="read-write"/>
    <key column="NAMINGSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.ChemComp.ChemCompSysName"/>
  </set>
  
  <set 
    name="hbChemTorsionSysNames" 
    table="CHEM_CHEMTORSIONSYSNAME"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbChemTorsionSysName</meta>
    <cache usage="read-write"/>
    <key column="NAMINGSYSTEMID"/>
    <one-to-many class="ccp.api.molecule.ChemComp.ChemTorsionSysName"/>
  </set>

  </class>

</hibernate-mapping>
