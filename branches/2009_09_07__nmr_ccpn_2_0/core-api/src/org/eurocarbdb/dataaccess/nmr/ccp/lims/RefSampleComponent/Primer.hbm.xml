<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.lims.RefSampleComponent">
  <joined-subclass
    name="Primer"
    extends="ccp.api.lims.RefSampleComponent.MolComponent"
    table="REFS_PRIMER"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">This is a subtype of MolComponent. A specific oligonucleotide or primer such as a PCR-primer used to amplify nucleic acid fragments.</meta>
  <key column="MOLCOMPONENTID" foreign-key="REFS_PRIMER_MOLCOMP_FK"/>
  
  <property
    name="_direction"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">Which direction? 5' or 3'.</meta>
    <meta attribute="default-value">null</meta>
    <column name="DIRECTION" sql-type="VARCHAR(32)" length="32" not-null="true"/>
  </property>
  
  <property
    name="_isUniversal"
    access="field"
    type="java.lang.Boolean"
    not-null="true"
  >
    <meta attribute="field-description">Is universal for all polymer molecules?</meta>
    <meta attribute="default-value">null</meta>
    <column name="ISUNIVERSAL" sql-type="BOOLEAN" not-null="true"/>
  </property>
  
  <property
    name="_meltingTemperature"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">The melting temperature at which this primer is used.</meta>
    <meta attribute="default-value">null</meta>
    <column name="MELTINGTEMPERATURE" sql-type="FLOAT" not-null="false"/>
  </property>

  </joined-subclass>

</hibernate-mapping>
