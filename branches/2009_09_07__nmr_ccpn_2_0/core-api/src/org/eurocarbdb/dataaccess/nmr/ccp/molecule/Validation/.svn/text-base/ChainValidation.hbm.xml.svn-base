<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.Validation">
  <joined-subclass
    name="ChainValidation"
    extends="ccp.api.molecule.Validation.ValidationResult"
    table="VALD_CHAINVALIDATION"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Validation result for one or more Chains</meta>
  <key column="VALIDATIONRESULTID" foreign-key="VALD_CHAIVALI_VALIRESU_FK"/>
  
  <set 
    name="hbChains" 
    table="VALD_CHAIVALI2CHAINS"
      schema="nmr" 
    inverse="false" 
    cascade="none"
  >
    <meta attribute="field-description">Chains being validated</meta>
    <meta attribute="base-name">hbChain</meta>
    <cache usage="read-write"/>
    <key column="CHAINVALIDATIONID" foreign-key="COOR_CHAIN_CHAIVALI_FK"/>
    <many-to-many column="CHAINID" class="ccp.api.molecule.MolStructure.Chain" foreign-key="VALD_CHAIVALI_CHAINS_FK"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
