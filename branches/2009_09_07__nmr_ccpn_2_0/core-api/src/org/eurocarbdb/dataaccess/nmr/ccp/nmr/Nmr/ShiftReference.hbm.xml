<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.Nmr">
  <class
    name="ShiftReference"
    table="NMR_SHIFTREFERENCE"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Chemical Shift referencing. The reference actually used (not the one quoted against).</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.nmr.Nmr.NmrProject"
    not-null="true"
    unique="false"
    foreign-key="NMR_SHIFREFE_NMRPROJECT_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_atomGroup"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">String describing the atom group from the molecule used for referencing.</meta>
    <meta attribute="default-value">null</meta>
    <column name="ATOMGROUP" sql-type="VARCHAR(80)" length="80" not-null="true"/>
  </property>
  
  <property
    name="_indirectShiftRatio"
    access="field"
    type="java.lang.Double"
    not-null="false"
  >
    <meta attribute="field-description">Ratio between nucleus resonance frequency and proton resonance frequency used for indirect shift referencing.</meta>
    <meta attribute="default-value">null</meta>
    <column name="INDIRECTSHIFTRATIO" sql-type="FLOAT8" not-null="false"/>
  </property>
  
  <property
    name="_isotopeCode"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">Isotope code, e.g. '1H', '3He','13C','235U' etc.</meta>
    <meta attribute="default-value">null</meta>
    <column name="ISOTOPECODE" sql-type="VARCHAR(32)" length="32" not-null="true"/>
  </property>
  
  <property
    name="_molName"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">Reference compound. </meta>
    <meta attribute="default-value">null</meta>
    <column name="MOLNAME" sql-type="VARCHAR(80)" length="80" not-null="true"/>
  </property>
  
  <property
    name="_referenceType"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">Is reference direct or indirect?</meta>
    <meta attribute="default-value">null</meta>
    <column name="REFERENCETYPE" sql-type="VARCHAR(32)" length="32" not-null="true"/>
  </property>
  
  <property
    name="_serial"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Serial number of object. Serves as object main key. Serial numbers of deleted objects are not re-used. Serial numbers can only be set by the implementation. Values are in practice always positive, since negative values are interpreted as a signal to set the next free serial</meta>
    <meta attribute="default-value">null</meta>
    <column name="SERIAL" sql-type="INTEGER" not-null="true" unique-key="shiftReferenceUniqueKey" />
  </property>
  
  <property
    name="_unit"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">Unit of shift reference.</meta>
    <meta attribute="default-value">"ppm"</meta>
    <column name="UNIT" sql-type="VARCHAR(32)" length="32" not-null="true"/>
  </property>
  
  <property
    name="_value"
    access="field"
    type="java.lang.Float"
    not-null="true"
  >
    <meta attribute="field-description">Value (frequency) of reference.</meta>
    <meta attribute="default-value">null</meta>
    <column name="VALUE" sql-type="FLOAT" not-null="true"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="NMR_SHIFREFE2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbCitation"
    column="CITATIONID"
    class="ccp.api.general.Citation.Citation" 
    cascade="merge,save-update"
    not-null="false"
    unique="false"
    foreign-key="NMR_SHIFREFE_CITATION_FK" 
  >
    <meta attribute="field-description">Citation describing shift reference.</meta>
  </many-to-one>
  
  <many-to-one
    name="hbNmrProject"
    column="NMRPROJECTID"
    class="ccp.api.nmr.Nmr.NmrProject" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMR_SHIFREFE_NMRPROJECT_FK" 
    unique-key="shiftReferenceUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbShiftRatioCitation"
    column="SHIFTRATIOCITATIONID"
    class="ccp.api.general.Citation.Citation" 
    cascade="merge,save-update"
    not-null="false"
    unique="false"
    foreign-key="NMR_SHIFREFE_SHIFRATICITA_FK" 
  >
    <meta attribute="field-description">Citation for shift ratio used for indirect referencing</meta>
  </many-to-one>
  
  <set 
    name="hbExperiments" 
    table="NMR_SHIFREFE2EXPE"
      schema="nmr" 
    inverse="false" 
    cascade="none"
  >
    <meta attribute="field-description">Experiments that use ShiftReference</meta>
    <meta attribute="base-name">hbExperiment</meta>
    <cache usage="read-write"/>
    <key column="SHIFTREFERENCEID" foreign-key="NMR_EXPERIMENT_SHIFREFE_FK"/>
    <many-to-many column="EXPERIMENTID" class="ccp.api.nmr.Nmr.Experiment" foreign-key="NMR_SHIFREFE_EXPE_FK"/>
  </set>

  </class>

</hibernate-mapping>
