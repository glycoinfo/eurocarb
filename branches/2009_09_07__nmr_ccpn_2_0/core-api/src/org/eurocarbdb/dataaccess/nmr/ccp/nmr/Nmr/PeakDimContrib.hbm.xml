<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.Nmr">
  <joined-subclass
    name="PeakDimContrib"
    extends="ccp.api.nmr.Nmr.AbstractPeakDimContrib"
    table="NMR_PEAKDIMCONTRIB"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">PeakDimContrib for parameters assigned to a single Resonance (the normal case).</meta>
  <key column="ABSTRACTPEAKDIMCONTRIBID" foreign-key="NMR_PEAKDIMCONT_ABSTPEAKDIMCONT_FK"/>
  
  <many-to-one
    name="hbResonance"
    column="RESONANCEID"
    class="ccp.api.nmr.Nmr.Resonance" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMR_PEAKDIMCONT_RESONANCE_FK" 
  >
    <meta attribute="field-description">Resonance assigned to PeakDimContrib</meta>
  </many-to-one>

  </joined-subclass>

</hibernate-mapping>
