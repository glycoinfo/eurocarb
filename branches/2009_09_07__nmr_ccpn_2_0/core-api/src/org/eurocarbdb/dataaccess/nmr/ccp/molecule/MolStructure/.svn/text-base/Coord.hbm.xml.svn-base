<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.MolStructure">
  <class
    name="Coord"
    table="COOR_COORD"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Coordinate record for StructureModel. </meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.molecule.MolStructure.StructureEnsemble"
    not-null="true"
    unique="false"
    foreign-key="COOR_COORD_STRUENSE_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_altLocationCode"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">Alternative location code for coordinate record, serves as key for object. Default is a single space (' '). Non-default values will only come in when there are several alternative locations for a given atom.</meta>
    <meta attribute="default-value">" "</meta>
    <column name="ALTLOCATIONCODE" sql-type="VARCHAR(80)" length="80" not-null="true" unique-key="coordUniqueKey" />
  </property>
  
  <property
    name="_bFactor"
    access="field"
    type="java.lang.Float"
    not-null="true"
  >
    <meta attribute="field-description">X-ray crystallographical B-factor</meta>
    <meta attribute="default-value">new java.lang.Float(0.0)</meta>
    <column name="BFACTOR" sql-type="FLOAT" not-null="true"/>
  </property>
  
  <property
    name="_occupancy"
    access="field"
    type="java.lang.Float"
    not-null="true"
  >
    <meta attribute="field-description">Fractional occupancy of this coordinate position by the atom.</meta>
    <meta attribute="default-value">new java.lang.Float(1.0)</meta>
    <column name="OCCUPANCY" sql-type="FLOAT" not-null="true"/>
  </property>
  
  <property
    name="_x"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">X coordinate in Angstroms</meta>
    <meta attribute="default-value">null</meta>
    <column name="X" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_y"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Y coordinate in Angstroms</meta>
    <meta attribute="default-value">null</meta>
    <column name="Y" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_z"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Z coordinate in Angstroms</meta>
    <meta attribute="default-value">null</meta>
    <column name="Z" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="COOR_COORD2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbAtom"
    column="ATOMID"
    class="ccp.api.molecule.MolStructure.Atom" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="COOR_COORD_ATOM_FK" 
    unique-key="coordUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbModel"
    column="MODELID"
    class="ccp.api.molecule.MolStructure.Model" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="COOR_COORD_MODEL_FK" 
    unique-key="coordUniqueKey" 
  >
    <meta attribute="field-description">Model that coordinates belong to. Part of key for Coord</meta>
  </many-to-one>

  </class>

</hibernate-mapping>
