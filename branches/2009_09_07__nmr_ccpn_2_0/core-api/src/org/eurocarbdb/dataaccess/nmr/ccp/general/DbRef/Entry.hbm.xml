<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.general.DbRef">
  <class
    name="Entry"
    table="DBR_ENTRY"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Database entry. This is a reference to an element in an outside database.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.general.DbRef.Database"
    not-null="true"
    unique="false"
    foreign-key="DBR_ENTRY_DATABASE_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_altCode"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">ALternative identifier - the exact meaning would depend on the database.</meta>
    <meta attribute="default-value">null</meta>
    <column name="ALTCODE" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_code"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">The database code that identifies the reference. e.g. 'Q12178'. Some databases have two-oart codes, in which cse the subCode holds teh second part. E.g. the PDB has accession code and chain code.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CODE" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_details"
    access="field"
    type="java.lang.String"
    not-null="false"
  >
    <meta attribute="field-description">Detail field for comments.</meta>
    <meta attribute="default-value">null</meta>
    <column name="DETAILS" sql-type="TEXT" not-null="false"/>
  </property>
  
  <property
    name="_name"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">Entry name, as used in the database.</meta>
    <meta attribute="default-value">null</meta>
    <column name="NAME" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_release"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">The database release.</meta>
    <meta attribute="default-value">null</meta>
    <column name="RELEASE" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_serial"
    access="field"
    type="java.lang.Integer"
    not-null="true"
  >
    <meta attribute="field-description">Unique identifier.</meta>
    <meta attribute="default-value">null</meta>
    <column name="SERIAL" sql-type="INTEGER" not-null="true" unique-key="entryUniqueKey" />
  </property>
  
  <property
    name="_subCode"
    access="field"
    type="java.lang.String" length="32"
    not-null="false"
  >
    <meta attribute="field-description">Second part of database unique identifie, for databases that have two-part codes. For e.g. the PDB the code would be the accession number and the subCode would be the chainCode. </meta>
    <meta attribute="default-value">null</meta>
    <column name="SUBCODE" sql-type="VARCHAR(32)" length="32" not-null="false"/>
  </property>
  
  <property
    name="_url"
    access="field"
    type="java.lang.String"
    not-null="false"
  >
    <meta attribute="field-description">The url of the database reference entry.</meta>
    <meta attribute="default-value">null</meta>
    <column name="URL" sql-type="TEXT" not-null="false"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="DBR_ENTRY2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbDatabase"
    column="DATABASEID"
    class="ccp.api.general.DbRef.Database" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="DBR_ENTRY_DATABASE_FK" 
    unique-key="entryUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <set 
    name="hbComponentDbRefs" 
    table="REFS_COMPONENTDBREF"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">The ComponentDbRef list associated to a particular database reference.</meta>
    <meta attribute="base-name">hbComponentDbRef</meta>
    <cache usage="read-write"/>
    <key column="DBREFID"/>
    <one-to-many class="ccp.api.lims.RefSampleComponent.ComponentDbRef"/>
  </set>
  
  <set 
    name="hbAlignments" 
    table="MOLE_ALIGNMENT"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Molecule alignments using DbRef.Entry</meta>
    <meta attribute="base-name">hbAlignment</meta>
    <cache usage="read-write"/>
    <key column="DBREFID"/>
    <one-to-many class="ccp.api.molecule.Molecule.Alignment"/>
  </set>
  
  <set 
    name="hbMolSystems" 
    table="MOLS_MOLSYSTEM2DBREFE"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">MolSystems that use this DB reference</meta>
    <meta attribute="base-name">hbMolSystem</meta>
    <cache usage="read-write"/>
    <key column="DBREFERENCEID" foreign-key="MOLS_MOLSYSTEM_DBREFE_FK"/>
    <many-to-many column="MOLSYSTEMID" class="ccp.api.molecule.MolSystem.MolSystem" foreign-key="DBR_ENTRY_MOLSYSTEMS_FK"/>
  </set>

  </class>

</hibernate-mapping>
