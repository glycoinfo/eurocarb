<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.NmrConstraint">
  <class
    name="ResCoord"
    table="NMRC_RESCOORD"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Coordinate record for ResStructure. Linked to FIxedResonance.</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.nmr.NmrConstraint.NmrConstraintStore"
    not-null="true"
    unique="false"
    foreign-key="NMRC_RESCOORD_NMRCONSSTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_x"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">X coordinate</meta>
    <meta attribute="default-value">null</meta>
    <column name="X" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_y"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Y coordinate</meta>
    <meta attribute="default-value">null</meta>
    <column name="Y" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <property
    name="_z"
    access="field"
    type="java.lang.Float"
    not-null="false"
  >
    <meta attribute="field-description">Z coordinate</meta>
    <meta attribute="default-value">null</meta>
    <column name="Z" sql-type="FLOAT" not-null="false"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="NMRC_RESCOORD2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbResonance"
    column="RESONANCEID"
    class="ccp.api.nmr.NmrConstraint.FixedResonance" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMRC_RESCOORD_RESONANCE_FK" 
    unique-key="resCoordUniqueKey" 
  >
    <meta attribute="field-description">FixedResonance to which ResCoords apply.</meta>
  </many-to-one>
  
  <many-to-one
    name="hbStructure"
    column="STRUCTUREID"
    class="ccp.api.nmr.NmrConstraint.ResStructure" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMRC_RESCOORD_STRUCTURE_FK" 
    unique-key="resCoordUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>

  </class>

</hibernate-mapping>
