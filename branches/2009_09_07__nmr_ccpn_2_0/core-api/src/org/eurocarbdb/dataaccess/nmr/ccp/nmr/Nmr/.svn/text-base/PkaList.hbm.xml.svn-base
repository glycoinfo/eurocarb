<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.Nmr">
  <joined-subclass
    name="PkaList"
    extends="ccp.api.nmr.Nmr.DerivedDataList"
    table="NMR_PKALIST"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">List of derived pKa measurements</meta>
  <key column="DERIVEDDATALISTID" foreign-key="NMR_PKALIST_DERIDATALIST_FK"/>
  
  <set 
    name="hbDerivations" 
    table="NMR_PKADERIVATION"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbDerivation</meta>
    <cache usage="read-write"/>
    <key column="PARENTLISTID"/>
    <one-to-many class="ccp.api.nmr.Nmr.PKaDerivation"/>
  </set>
  
  <set 
    name="hbExperiments" 
    table="NMR_EXPERIMENT"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Experiments for which PKaList is valid</meta>
    <meta attribute="base-name">hbExperiment</meta>
    <cache usage="read-write"/>
    <key column="PKALISTID"/>
    <one-to-many class="ccp.api.nmr.Nmr.Experiment"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
