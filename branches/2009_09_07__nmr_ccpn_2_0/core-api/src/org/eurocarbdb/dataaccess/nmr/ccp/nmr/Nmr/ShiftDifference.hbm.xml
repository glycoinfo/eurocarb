<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.nmr.Nmr">
  <joined-subclass
    name="ShiftDifference"
    extends="ccp.api.nmr.Nmr.AbstractMeasurement"
    table="NMR_SHIFTDIFFERENCE"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">Chemical shift difference measurement</meta>
  <key column="ABSTRACTMEASUREMENTID" foreign-key="NMR_SHIFDIFF_ABSTMEAS_FK"/>
  
  <many-to-one
    name="hbParentList"
    column="PARENTLISTID"
    class="ccp.api.nmr.Nmr.ShiftDifferenceList" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMR_SHIFDIFF_PARENTLIST_FK" 
    unique-key="shiftDifferenceUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbResonance"
    column="RESONANCEID"
    class="ccp.api.nmr.Nmr.Resonance" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="NMR_SHIFDIFF_RESONANCE_FK" 
    unique-key="shiftDifferenceUniqueKey" 
  >
    <meta attribute="field-description">Resonance that holds the chemical shift difference.</meta>
  </many-to-one>

  </joined-subclass>

</hibernate-mapping>
