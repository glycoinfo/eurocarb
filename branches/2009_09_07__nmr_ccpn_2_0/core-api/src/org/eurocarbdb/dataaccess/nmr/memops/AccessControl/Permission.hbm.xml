<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="memops.api.AccessControl">
  <class
    name="Permission"
    table="ACCO_PERMISSION"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">N/A</meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="memops.api.AccessControl.AccessControlStore"
    not-null="true"
    unique="false"
    foreign-key="ACCO_PERMISSION_ACCECONTSTOR_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_opType"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="default-value">"any"</meta>
    <column name="OPTYPE" sql-type="VARCHAR(32)" length="32" not-null="true" unique-key="permissionUniqueKey" />
  </property>
  
  <property
    name="_permission"
    access="field"
    type="java.lang.Boolean"
    not-null="true"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="default-value">true</meta>
    <column name="PERMISSION" sql-type="BOOLEAN" not-null="true"/>
  </property>
  
  <property
    name="_permissionClass"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="default-value">"any"</meta>
    <column name="PERMISSIONCLASS" sql-type="VARCHAR(32)" length="32" not-null="true" unique-key="permissionUniqueKey" />
  </property>
  
  <property
    name="_roleName"
    access="field"
    type="java.lang.String" length="32"
    not-null="true"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="default-value">"any"</meta>
    <column name="ROLENAME" sql-type="VARCHAR(32)" length="32" not-null="true" unique-key="permissionUniqueKey" />
  </property>
  
  <list
    name="hbApplicationData"
    table="ACCO_PERMISSION2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbAccessObject"
    column="ACCESSOBJECTID"
    class="memops.api.AccessControl.AccessObject" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="ACCO_PERMISSION_ACCEOBJE_FK" 
    unique-key="permissionUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbUserGroup"
    column="USERGROUPID"
    class="memops.api.AccessControl.UserGroup" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="ACCO_PERMISSION_USERGROUP_FK" 
    unique-key="permissionUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>

  </class>

</hibernate-mapping>
