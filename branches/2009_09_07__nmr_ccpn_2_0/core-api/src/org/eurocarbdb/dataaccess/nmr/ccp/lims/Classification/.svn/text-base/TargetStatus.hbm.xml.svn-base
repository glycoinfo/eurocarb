<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.lims.Classification">
  <joined-subclass
    name="TargetStatus"
    extends="ccp.api.lims.Classification.AbstractCategory"
    table="CLAS_TARGETSTATUS"
    schema="nmr" 
  >
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">General target status classification.</meta>
  <key column="ABSTRACTCATEGORYID" foreign-key="CLAS_TARGSTAT_ABSTCATE_FK"/>
  
  <many-to-one
    name="hbClassification"
    column="CLASSIFICATIONID"
    class="ccp.api.lims.Classification.Classification" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="CLAS_TARGSTAT_CLAS_FK" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <set 
    name="hbTargetScoreboards" 
    table="CLAS_TARGSTAT2TARGSCOR"
      schema="nmr" 
    inverse="false" 
    cascade="none"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbTargetScoreboard</meta>
    <cache usage="read-write"/>
    <key column="TARGETSTATUSID" foreign-key="CLAS_TARGSCOR_TARGSTAT_FK"/>
    <many-to-many column="TARGETSCOREBOARDID" class="ccp.api.lims.Classification.TargetScoreboard" foreign-key="CLAS_TARGSTAT_TARGSCOR_FK"/>
  </set>

  </joined-subclass>

</hibernate-mapping>
