<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping auto-import="false" package="ccp.api.molecule.MolSystem">
  <class
    name="Chain"
    table="MOLS_CHAIN"
    schema="nmr" 
  >
  <meta attribute="extends" inherit="false">memops.general.AbstractModelObject</meta>
  <meta attribute="implements">java.lang.Comparable</meta>
  <meta attribute="class-description">A specific instance of a given molecule in a specific environment. E.g. one of the chains for a homodimer.  The Chain corresponds to a specific Molecule, but may differ in some ways.   Creating a Chain automatically creates the Residue and Atom objects corresponding to it. </meta>
  <cache usage="read-write"/>

  <id
    name="_dbId"
    access="field"
    column="DATAOBJECTID"
    type="java.lang.Long">
    <meta attribute="scope-set">protected</meta>
    <generator class="native"/>
  </id>
  
  <many-to-one
    name="_topObject"
    access="field"
    column="TOPOBJECTID"
    class="ccp.api.molecule.MolSystem.MolSystem"
    not-null="true"
    unique="false"
    foreign-key="MOLS_CHAIN_MOLSYSTEM_TO_FK"
  >
    <meta attribute="field-description">hard coded link to topObject</meta>
  </many-to-one>
  
  <property
    name="_chemExchangeState"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">for NMR spectroscopy. Short text describing the chemical exchange state.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CHEMEXCHANGESTATE" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_code"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">ChainCode - key for the Chain class. Should ideally be a single letter, if possible.</meta>
    <meta attribute="default-value">null</meta>
    <column name="CODE" sql-type="VARCHAR(80)" length="80" not-null="true" unique-key="chainUniqueKey" />
  </property>
  
  <property
    name="_conformationalIsomer"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">short text describing the conformational isomer</meta>
    <meta attribute="default-value">null</meta>
    <column name="CONFORMATIONALISOMER" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_details"
    access="field"
    type="java.lang.String" length="254"
    not-null="false"
  >
    <meta attribute="field-description">Free text, for notes, explanatory comments, etc.</meta>
    <meta attribute="default-value">null</meta>
    <column name="DETAILS" sql-type="VARCHAR(254)" length="254" not-null="false"/>
  </property>
  
  <property
    name="_magnEquivalenceCode"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">For NMR data. Chains with the same magnEquivalenceCode are magnetically equivalent within the MolSystem. If not set no chains are magnetically equivalent.</meta>
    <meta attribute="default-value">null</meta>
    <column name="MAGNEQUIVALENCECODE" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_pdbOneLetterCode"
    access="field"
    type="java.lang.String" length="80"
    not-null="true"
  >
    <meta attribute="field-description">One letter chain identifier. Will be used by PDB (and programs that use similar conventions). WARNING: having same oneLetterCode for different chains is legal but may cause serious confusion.</meta>
    <meta attribute="default-value">" "</meta>
    <column name="PDBONELETTERCODE" sql-type="VARCHAR(80)" length="80" not-null="true"/>
  </property>
  
  <property
    name="_physicalState"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">e.g. folded/unfolded</meta>
    <meta attribute="default-value">null</meta>
    <column name="PHYSICALSTATE" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <property
    name="_role"
    access="field"
    type="java.lang.String" length="80"
    not-null="false"
  >
    <meta attribute="field-description">Role of Chain within MolSystem</meta>
    <meta attribute="default-value">null</meta>
    <column name="ROLE" sql-type="VARCHAR(80)" length="80" not-null="false"/>
  </property>
  
  <list
    name="hbApplicationData"
    table="MOLS_CHAIN2APPLDATA"
      schema="nmr" 
    access="property"
    cascade="all"
  >
    <meta attribute="field-description">Application-specific data</meta>
    <key column="DATAOBJECTID"/>
    <list-index column="ORDER_applicationData_" base="1"/>
    <many-to-many
      column="APPLICATIONDATAID"
      class="memops.api.Implementation.ApplicationData"
      foreign-key="IMPL_DATAOBJECT_APPLDATA_FK"
      unique="true">
    </many-to-many>
  </list>
  
  <many-to-one
    name="hbAccess"
    column="ACCESSID"
    class="memops.api.AccessControl.AccessObject" 
    not-null="false"
    unique="true"
    foreign-key="IMPL_DATAOBJECT_ACCESS_FK" 
  >
    <meta attribute="field-description">Access object that controls object access</meta>
  </many-to-one>
  
  <many-to-one
    name="hbMolSystem"
    column="MOLSYSTEMID"
    class="ccp.api.molecule.MolSystem.MolSystem" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="MOLS_CHAIN_MOLSYSTEM_FK" 
    unique-key="chainUniqueKey" 
  >
    <meta attribute="field-description">N/A</meta>
  </many-to-one>
  
  <many-to-one
    name="hbMolecule"
    column="MOLECULEID"
    class="ccp.api.molecule.Molecule.Molecule" 
    cascade="merge,save-update"
    not-null="true"
    unique="false"
    foreign-key="MOLS_CHAIN_MOLECULE_FK" 
  >
    <meta attribute="field-description">Molecule to which Chain corresponds</meta>
  </many-to-one>
  
  <set 
    name="hbChainFragments" 
    table="MOLS_CHAINFRAGMENT"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">N/A</meta>
    <meta attribute="base-name">hbChainFragment</meta>
    <cache usage="read-write"/>
    <key column="CHAINID"/>
    <one-to-many class="ccp.api.molecule.MolSystem.ChainFragment"/>
  </set>
  
  <set 
    name="hbResidues" 
    table="MOLS_RESIDUE"
      schema="nmr" 
    inverse="true" 
    cascade="all"
  >
    <meta attribute="field-description">child link</meta>
    <meta attribute="base-name">hbResidue</meta>
    <cache usage="read-write"/>
    <key column="CHAINID"/>
    <one-to-many class="ccp.api.molecule.MolSystem.Residue"/>
  </set>
  
  <set 
    name="hbChainStateSets" 
    table="NMR_CHAINSTATESET"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">ChainStateSets belonging to Chain</meta>
    <meta attribute="base-name">hbChainStateSet</meta>
    <cache usage="read-write"/>
    <key column="CHAINID"/>
    <one-to-many class="ccp.api.nmr.Nmr.ChainStateSet"/>
  </set>
  
  <set 
    name="hbChainInteractions" 
    table="MOLS_CHAIINTE2CHAINS"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">An interaction of a given type between a pair  of Chains</meta>
    <meta attribute="base-name">hbChainInteraction</meta>
    <cache usage="read-write"/>
    <key column="CHAINID" foreign-key="MOLS_CHAIINTE_CHAINS_FK"/>
    <many-to-many column="CHAININTERACTIONID" class="ccp.api.molecule.MolSystem.ChainInteraction" foreign-key="MOLS_CHAIN_CHAIINTE_FK"/>
  </set>
  
  <set 
    name="hbMolSysChainValidations" 
    table="VALD_MOLSYSCHAIVALI2CHAINS"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">Validation results for Chain</meta>
    <meta attribute="base-name">hbMolSysChainValidation</meta>
    <cache usage="read-write"/>
    <key column="CHAINID" foreign-key="VALD_MOLSYSCHAIVALI_CHAINS_FK"/>
    <many-to-many column="MOLSYSCHAINVALIDATIONID" class="ccp.api.molecule.Validation.MolSysChainValidation" foreign-key="MOLS_CHAIN_MOLSYSCHAIVALI_FK"/>
  </set>
  
  <set 
    name="hbResonanceGroups" 
    table="NMR_RESOGROU2CHAINS"
      schema="nmr" 
    inverse="true" 
    cascade="none"
  >
    <meta attribute="field-description">ResonanceGroups that may be relevant to Chain</meta>
    <meta attribute="base-name">hbResonanceGroup</meta>
    <cache usage="read-write"/>
    <key column="CHAINID" foreign-key="NMR_RESOGROU_CHAINS_FK"/>
    <many-to-many column="RESONANCEGROUPID" class="ccp.api.nmr.Nmr.ResonanceGroup" foreign-key="MOLS_CHAIN_RESOGROU_FK"/>
  </set>

  </class>

</hibernate-mapping>
